name: Retrain and Deploy

on:
  push:
    branches:
      - main

jobs:
  retrain:
    runs-on: ubuntu-latest

    steps:
      # 1. Checkout repo
      - name: Checkout repository
        uses: actions/checkout@v3

      # 2. Set up Python
      - name: Set up Python 3.11
        uses: actions/setup-python@v4
        with:
          python-version: 3.11

      # 3. Install dependencies
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      # 4. Run retraining script
      - name: Run model retraining
        run: |
          python main.py

      # 5. (Optional) Build Docker image
      # Uncomment if you want to build Docker in CI/CD
      #- name: Build Docker image
      #  run: docker build -t order-delay-api .

      # 6. (Optional) Push Docker image to registry
      # Uncomment and configure your registry if needed
      #- name: Push Docker image
      #  run: |
      #    docker login -u ${{ secrets.DOCKER_USERNAME }} -p ${{ secrets.DOCKER_PASSWORD }}
      #    docker push your-docker-username/order-delay-api:latest
